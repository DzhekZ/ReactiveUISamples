<UserControl x:Class="ReactiveRouting.ViewB"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300" Background="LightSeaGreen">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock HorizontalAlignment="Center" Foreground="Black" FontSize="100">View: <Run  x:Name="ViewInstanceId" /></TextBlock>
            <TextBlock HorizontalAlignment="Center" Foreground="Black" FontSize="100">VM: <Run  x:Name="ViewModelInstanceId" /></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>